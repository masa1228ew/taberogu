    	   authorities.add(new SimpleGrantedAuthority("ROLE_GENERAL"));
    	   auth.setAuthentication(new UsernamePasswordAuthenticationToken(userDetails,user.getPassword(),authorities));
    	    return "user/cancelResult"; // 操作結果を表示するページ
    	}
     
     
